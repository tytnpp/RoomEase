<header class="bg-white shadow">
  <div class="container mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Left Section: Title -->
    <h1 class="text-xl font-bold text-gray-800">RoomEase</h1>

    <!-- Right Section: User Info and Logout -->
    <div class="flex items-center space-x-4">
      <span class="text-gray-700">Welcome, <%= current_user.email %></span>
      <%= form_with url: destroy_user_session_path, method: :delete, class: "inline-block" do %>
        <%= submit_tag 'Logout', class: "bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 cursor-pointer" %>
      <% end %>
    </div>
  </div>
</header>