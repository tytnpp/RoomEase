<% if resource.errors.any? %>
  <div class="flex flex-col items-center justify-center gap-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">

  <div class="flex flex-col items-start w-full">
    

  

    <strong class="font-bold">Oops!</strong>
    <span class="block sm:inline">
      <%= I18n.t("errors.messages.not_saved",
                count: resource.errors.count,
                resource: resource.class.model_name.human.downcase) %>
    </span>

    <ul class="mt-2 list-disc list-inside text-sm">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

    </div>

    <button type="button" class="w-fit" onclick="this.parentElement.remove();">
  <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
    <title>Close</title>
    <path d="M14.348 5.652a1 1 0 00-1.414 0L10 8.586 7.066 5.652A1 1 0 105.652 7.066L8.586 10l-2.934 2.934a1 1 0 101.414 1.414L10 11.414l2.934 2.934a1 1 0 001.414-1.414L11.414 10l2.934-2.934a1 1 0 000-1.414z"/>
  </svg>
</button>

  </div>
<% end %>