<%= form_with(model: [room, reservation], local: true, id: "reservationForm") do |f| %>
  <div>
    <%= f.label :start_time, "Select Time Slot", class: "block font-medium text-gray-700" %>
    <%= f.select :start_time, 
          options_for_select(
            time_slots.map { |slot| ["#{slot[:start_time].strftime('%H:%M')} - #{slot[:end_time].strftime('%H:%M')}", slot[:start_time]] }
          ), 
          {}, 
          class: "block w-full mt-1 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
    %>
  </div>

  <%= f.submit "Reserve", class: "mt-4 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
<% end %>