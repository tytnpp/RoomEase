<!-- Reservation Cancellation Form -->
<div class="max-w-3xl mx-auto">
    <div class="mb-6">
        <%= link_to activity_path, class: "inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Back to activity details
        <% end %>
    </div>

    <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="px-6 py-4 bg-indigo-50 border-b border-indigo-100">
            <h1 class="text-xl font-semibold text-gray-900">Reservation Details for <%= @reservation.room.name %></h1>
        </div>

        <div class="p-6">
            <!-- Display Start and End Time -->
            <div>
                <label class="block text-sm font-medium text-gray-900">Reservation Start Time</label>
                <div class="mt-1">
                    <p class="text-base text-gray-500"><%= @reservation.start_time.strftime('%A, %B %d, %Y %I:%M %p') %></p>
                </div>
            </div>

            <div class="mt-6">
                <label class="block text-sm font-medium text-gray-900">Reservation End Time</label>
                <div class="mt-1">
                    <p class="text-base text-gray-500"><%= @reservation.end_time.strftime('%A, %B %d, %Y %I:%M %p') %></p>
                </div>
            </div>

            <!-- Cancel Button (Submit Cancellation) -->
            <div class="flex justify-end mt-6">
                <%= button_to cancel_room_reservation_path(@reservation.room, @reservation), method: :post, data: { confirm: "Are you sure you want to cancel this reservation?" }, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
                    Cancel Reservation
                <% end %>
            </div>
        </div>
    </div>
</div>
