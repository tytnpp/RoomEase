<h1>Activity</h1>

<!-- Current and Future Reservations -->
<h2>Current Reservations</h2>
<% if @current_reservations.any? %>
  <ul>
    <% @current_reservations.each do |reservation| %>
      <li>
        Room: <%= reservation.room.name %><br>
        Start: <%= reservation.start_time.strftime("%d %B %Y, %H:%M") %><br>
        End: <%= reservation.end_time.strftime("%d %B %Y, %H:%M") %><br>
        <%= link_to 'Edit', edit_room_reservation_path(reservation.room, reservation), class: 'btn btn-primary' %> |
        <%= link_to 'Cancel', room_reservation_path(reservation.room, reservation), method: :delete, data: { confirm: 'Are you sure you want to cancel this reservation?' }, class: 'btn btn-danger' %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No current or future reservations.</p>
<% end %>

<!-- Reservation History -->
<h2>Reservation History</h2>
<% if @past_reservations.any? %>
  <ul>
    <% @past_reservations.each do |reservation| %>
      <li>
        Room: <%= reservation.room.name %><br>
        Start: <%= reservation.start_time.strftime("%d %B %Y, %H:%M") %><br>
        End: <%= reservation.end_time.strftime("%d %B %Y, %H:%M") %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No past reservations.</p>
<% end %>